<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>LED Matrix Editor by VRN Electronic</title>
  <style>
    body {background:#111;color:#fff;text-align:center;font-family:sans-serif;}
    h1 {color:#00ff99;}
    canvas {background:#222;margin-top:20px;cursor:crosshair;}
    button {margin:5px;padding:10px 15px;border:none;border-radius:8px;background:#00ff99;color:#000;font-weight:bold;}
  </style>
</head>
<body>
  <h1>LED MATRIX EDITOR BY VRN ELECTRONIC</h1>
  <canvas id="matrix" width="320" height="80"></canvas><br>
  <button onclick="clearMatrix()">Clear</button>
  <button onclick="randomPixels()">Random</button>
  <button onclick="animate()">Play</button>
  <script>
    const c = document.getElementById("matrix");
    const ctx = c.getContext("2d");
    const w = 32, h = 8, s = 10;
    let pixels = Array(h).fill().map(()=>Array(w).fill(0));
    function draw() {
      ctx.clearRect(0,0,c.width,c.height);
      for(let y=0;y<h;y++)for(let x=0;x<w;x++){
        ctx.fillStyle=pixels[y][x]?"#00ff99":"#333";
        ctx.fillRect(x*s,y*s,s-1,s-1);
      }
    }
    c.addEventListener("click",e=>{
      const x=Math.floor(e.offsetX/s),y=Math.floor(e.offsetY/s);
      pixels[y][x]^=1;draw();
    });
    function clearMatrix(){pixels=Array(h).fill().map(()=>Array(w).fill(0));draw();}
    function randomPixels(){for(let y=0;y<h;y++)for(let x=0;x<w;x++)pixels[y][x]=Math.random()>0.8?1:0;draw();}
    function animate(){
      let frame=0;
      const interval=setInterval(()=>{
        for(let y=0;y<h;y++)for(let x=0;x<w;x++)pixels[y][x]=Math.random()>0.8?1:0;
        draw();if(++frame>50)clearInterval(interval);
      },150);
    }
    draw();
  </script>
</body>
</html>
